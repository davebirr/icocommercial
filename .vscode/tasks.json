			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-Command",
				"$dir = Read-Host 'Enter directory path (or press Enter for current directory)'; if (-not $dir) { $dir = '.' }; .\\New-DirectorySummary.ps1 -DirectoryPath $dir"
			],
